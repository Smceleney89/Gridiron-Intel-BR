QTableView {
    alternate-background-color: #A2A4A3;
    selection-background-color: #C60C30; /*primary*/
}

QTableCornerButton {
    background-color: #C60C30; /*primary*/
}

QHeaderView::section {
    background-color: #C60C30; /*primary*/
    border: 0.5px solid white;
    color: white;
}

QComboBox QAbstractItemView {
    selection-background-color: #C60C30;
}